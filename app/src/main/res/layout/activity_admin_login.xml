<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".AdminLogin">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="215dp"
        android:layout_height="132dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="103dp"
        android:clickable="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logonobg"
        tools:visibility="visible" />

    <Button
        android:id="@+id/notadmin"
        style="@android:style/Widget.Material.Light.Button.Toggle"
        android:layout_width="139dp"
        android:layout_height="52dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="118dp"
        android:background="#00000000"
        android:fontFamily="@font/tauri"
        android:text="Not an Admin?"
        android:textAlignment="center"
        android:textColor="#F44336"
        android:textSize="12sp"
        android:typeface="normal"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="346dp"
        android:layout_height="315dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="29dp"
        app:cardBackgroundColor="#4B4B4B"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">


        <EditText
            android:id="@+id/adminem"
            android:layout_width="249dp"
            android:layout_height="53dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="81dp"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:ems="10"
            android:fontFamily="@font/tauri"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <EditText
            android:id="@+id/adminpass"
            android:layout_width="249dp"
            android:layout_height="53dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="81dp"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:ems="10"
            android:fontFamily="@font/tauri"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/adminloginbtn"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_marginTop="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adminloginbtn"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/next">

        </com.airbnb.lottie.LottieAnimationView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:fontFamily="@font/tauri"
        android:text="Admin Login"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
