<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="196.5dp"
    android:layout_height="296dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/productcard"
        android:layout_width="wrap_content"
        android:layout_height="290dp"
        android:layout_marginStart="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:hapticFeedbackEnabled="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productphoto"
                android:layout_width="170dp"
                android:layout_height="143dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="11.5dp"
                android:background="#0C000000"
                app:srcCompat="@drawable/s22" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.04"
                android:text="Smartphones"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/tauri"
            android:letterSpacing="-0.05"
            android:text="Product Name"
            android:textColor="#B2000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/productval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/tauri"
            android:letterSpacing="-0.05"
            android:text="Rs. 100,000"
            android:textColor="@color/purple_700"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />


        <ImageView
            android:id="@+id/cartphoto"
            android:layout_width="38dp"
            android:layout_height="41dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="225dp"
            app:srcCompat="@drawable/carticonwhitenobg" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="240dp"
            app:srcCompat="@drawable/review" />

        <TextView
            android:id="@+id/reviewtv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="254dp"
            android:fontFamily="@font/tauri"
            android:text="4.5/5"
            android:textColor="#B2000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>
